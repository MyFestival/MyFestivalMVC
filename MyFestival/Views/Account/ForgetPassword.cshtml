@model MyFestival.Models.UserProfile

<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="panel-title">Did you forget your password?</h3>
            </div>
            <div class="modal-body">
                @Html.ValidationSummary(true, null, new { @style = "color:red;" })
                <hr />
                To reset your password, input your email address and press the Reset Password button.
                <br />
                <hr />
                <div class="form-group">
                    <div class="col-md-12">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Username" })
                        </div>
                        @Html.ValidationMessageFor(m => m.UserName, null, new { @style = "color:red;" })
                    </div>
                </div>
                <br />
                <br />
                <div class="modal-footer">
                    <input type="submit" value="  Reset Password  " class="btn btn-lg btn-success btn-block" />
                    <br />
                    @Html.ActionLink("Back to Login", "Login", null, new { @class = "btn btn-lg btn-info btn-block" })
                </div>
            </div>
        </div>
    </div>
</div>
